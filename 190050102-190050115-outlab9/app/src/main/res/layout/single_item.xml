    android:layout_height="wrap_content"
    android:background="#B9D8E6"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="69dp">

        <TextView
